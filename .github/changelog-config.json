{
    "categories": [
      {
        "title": "## 🚀 Features",
        "labels": ["feature", "enhancement"],
        "commits": ["feat\\(.*\\):", "feat:"]
      },
      {
        "title": "## ⚠️ Breaking Changes",
        "labels": ["breaking"],
        "commits": ["^BREAKING[ -]CHANGE:"]
      },
      {
        "title": "## 🐛 Bug Fixes",
        "labels": ["fix", "bug"],
        "commits": ["fix\\(.*\\):", "fix:"]
      },
      {
        "title": "## 📝 Documentation",
        "labels": ["documentation", "docs"],
        "commits": ["docs:"]
      },
      {
        "title": "## ⚡ Performance",
        "labels": ["performance"],
        "commits": ["^perf:"]
      },
      {
        "title": "## 🧪 Tests",
        "labels": ["test"],
        "commits": ["^test:"]
      },
      {
        "title": "## ♻️ Refactoring",
        "labels": ["refactor"],
        "commits": ["^refactor:"]
      },
      {
        "title": "## 🔧 Maintenance",
        "labels": ["chore", "dependencies"],
        "commits": ["^chore:"]
      },
      {
        "title": "## 💄 Style",
        "labels": ["style"],
        "commits": ["^style:"]
      },
      {
        "title": "## 🏗️ Build",
        "labels": ["build"],
        "commits": ["^build:"]
      },
      {
        "title": "## 👥 Contributors",
        "labels": ["contributors"],
        "commits": ["^contributor:"]
      }
    ],
    "ignore_labels": [
      "ignore"
    ],
    "sort": "ASC",
    "template": "${{CHANGES}}\n\n## 📦 Full Changelog\n\n${{UNCATEGORIZED}}\n\nFor a complete list of changes, see the [full diff](${{RELEASE_DIFF}})",
    "commit_template": "- ${{SUBJECT}}",
    "empty_template": "No changes in this category"
}